// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Saree {
  id           String   @id @default(cuid())
  slug         String   @unique
  name         String
  region       String

  imageUrl     String
  heroImage  String   @default("")
  gallery    String[] @default([])

  baseReason String   @default("")
  reason       String

  fabric       String
  weave        String
  feel         String
  weight       String
  occasions    String[]

  price        Int

  // Inventory & control
  stock        Int       @default(0)
  isActive     Boolean   @default(true)

  // Soft attributes (ranking / personalization)
  borderWeight String    // "light" | "medium"
  drape        String    // "soft" | "structured"
  colorTone    String    // "warm" | "neutral" | "cool"
  images       SareeImage[]   // âœ… gallery
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Order {
  id                String   @id @default(uuid())

  sareeId   String @default("")
  sareeSlug          String
  sareeName          String

  quantity           Int      @default(1)
  amount             Int      // INR (total)

  customerName       String
  phone              String
  address            String

  status             String   // created | paid | failed
  failureReason      String?

  razorpayOrderId    String?
  razorpayPaymentId  String?

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model DrapeArchetype {
  id          String   @id @default(uuid())
  key         String   @unique
  title       String
  description String
  imageUrl    String
  priority    Int      @default(0)

  createdAt   DateTime @default(now())
}

model SareeImage {
  id        String   @id @default(cuid())
  sareeId   String
  imageUrl  String
  position  Int      @default(0)

  saree     Saree    @relation(fields: [sareeId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}